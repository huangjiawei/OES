        function SumitAudit(audit) {
            var s1 = $("#txtAssessment").val();
            if (s1 == null || s1 == undefined) s1 = $("#txtAssessment").text();

            $.ajax({
                url: '@Url.Content("~/TestPaper/Censor")',
                data: { ID: '@Model.ID', Assessment: s1, Audit: audit },
                type: "POST",
                dataType: "json",
                success: function (data) {
