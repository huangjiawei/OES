        {
    <link href="@Url.Content("~/Content/raterater.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/raterater/raterater.jquery.js")"></script>
