        function deleteItem() {
            var id = '@Model.ID'
            if (confirm("确定要删除选中的题目吗?")) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    data: { ID: id },
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        if (data.Success == 0) {
